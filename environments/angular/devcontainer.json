{
  "name": "angular",
  "initializeCommand": {
    "BASH_SSH_SETUP": "bash .devcontainer/scripts/setup-env.sh"
  },
  "runArgs": ["--env-file", "${localWorkspaceFolder}/.devcontainer/temp/.env"],
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "containerEnv": {
    "WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
    "BUILD_CONFIGURATION": "DEVELOPMENT"
  },
  "mounts": [
		{ "source": "${localWorkspaceFolder}/.devcontainer/temp/.ssh", "target": "/root/.ssh", "type": "bind" },
		{ "source": "${localWorkspaceFolder}/.devcontainer/home/.ssh", "target": "/root/", "type": "bind" }
	],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "PKief.material-icon-theme",
        "usernamehw.errorlens",
        "ms-azuretools.vscode-docker",
        "cyrilletuzi.angular-schematics",
        "Angular.ng-template"
      ]
    }
  },
  "portsAttributes": {
    "4200": {
      "label": "4200:4200"
    }
  }
}
